{{#each erros}}
    <div class="alert alert-danger">
        {{texto}}
    </div>
{{else}}

{{/each}}

<div class="card mb-4">
    <div class="card-body">
        <h4>Editar Postagem:</h4>
        <form action="/admin/postagens/edit" method="POST">
            <input type="hidden" value="{{postagem._id}}" name="id">
            <label for="titulo">Título:</label>
            <input type="text" name="titulo" class="form-control" value="{{postagem.titulo}}">

            <label for="titulo" class="mt-2">Slug:</label>
            <input type="text" name="slug" class="form-control"  value="{{postagem.slug}}">

            <label for="titulo" class="mt-2">Descrição:</label>
            <input type="text" name="descricao" class="form-control" value="{{postagem.descricao}}">

            <label for="titulo" class="mt-2">Conteúdo:</label>
            <br>
            <textarea name="conteudo" class="form-control">{{postagem.conteudo}}</textarea>
            <label for="categoria" class="mt-2"> Categoria: </label>
            <select name="categoria" class="custom-select" value="{{postagem.categoria}}">
                {{#each categorias}}
                    <option value="{{_id}}">
                        {{nome}}
                    </option>
                {{else}}
                    <option value="0">
                        Nenhuma categoria registrada
                    </option>
                {{/each}}
            </select>
            <br>
            <button class="btn btn-success mt-4" type="submit">Editar</button>
        </form>
    </div>
</div>