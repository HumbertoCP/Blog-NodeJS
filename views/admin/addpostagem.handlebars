{{#each erros}}
    <div class="alert alert-danger">
        {{texto}}
    </div>
{{else}}

{{/each}}

<div class="card mb-4">
    <div class="card-body">
        <h4>Nova Postagem:</h4>
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo">Título:</label>
            <input type="text" name="titulo" class="form-control">

            <label for="titulo" class="mt-2">Slug:</label>
            <input type="text" name="slug" class="form-control">

            <label for="titulo" class="mt-2">Descrição:</label>
            <input type="text" name="descricao" class="form-control">

            <label for="titulo" class="mt-2">Conteúdo:</label>
            <br>
            <textarea name="conteudo" class="form-control"></textarea>
            <label for="categoria" class="mt-2"> Categoria: </label>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                    <option value="{{_id}}">
                        {{nome}}
                    </option>
                {{else}}
                    <option value="0">
                        Nenhuma categoria registrada
                    </option>
                {{/each}}
            </select>
            <br>
            <button class="btn btn-success mt-4" type="submit">Criar</button>
        </form>
    </div>
</div>